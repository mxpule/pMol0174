#ifndef PLABRECTTEXTITEM_H
#define PLABRECTTEXTITEM_H

#include <QtGUI>
#include <QGraphicsItem>
#include <QPainter>
#include <QWidget>
#include <QStyleOptionGraphicsItem>
#include <QGraphicsScene>

class pLabRectTextItem : public QGraphicsItem
{
  public:
    pLabRectTextItem(int p_w, int p_h, int p_color, QString const &p_text);

    virtual QRectF boundingRect() const;

    static void create(QGraphicsScene* scene, int x, int y, int w, int h, int color, const QString &text);

  protected:
    virtual void paint(QPainter *painter, const QStyleOptionGraphicsItem *option, QWidget *widget);

  private:
    QString text;
    int color, w, h;
 };

#endif

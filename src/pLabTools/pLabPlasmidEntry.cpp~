#include <QtGui>
#include <QtSql>

#include "pLabTools/pLabUtils.h"
#include "pLabTools/pLabPlasmidEntry.h"

pLabPlasmidEntry::pLabPlasmidEntry(pMolKernelInterface* p_interface)
{
  interface = p_interface;

  resistanceType = new QComboBox;
  resistanceType->addItem(tr("ampicillin"));
  resistanceType->addItem(tr("kanamycin"));
  resistanceType->addItem(tr("chloramphenicol"));
  resistanceType->addItem(tr("zeocin"));
  resistanceType->addItem(tr("crocicillin"));

  nameString = new QLineEdit;
  nameString->setFocus();

  QPushButton *saveButton = new QPushButton("save");
  QPushButton *cancelButton = new QPushButton("cancel");


  connect(saveButton, SIGNAL(clicked(bool)),
            this, SLOT(saveButtonClicked(bool)));

  connect(cancelButton, SIGNAL(clicked(bool)),
            this, SLOT(cancelButtonClicked(bool)));


  QGridLayout *layout = new QGridLayout;
  layout->addWidget(nameString, 1, 0, 1, 4);
  layout->addWidget(resistanceType, 2, 0);
  layout->addWidget(saveButton, 3, 0, 1, 1);
  layout->addWidget(cancelButton, 3,1, 1, 1);

  setLayout(layout);
  setWindowTitle(tr("Enter new real pMolDna!"));
};


void pLabPlasmidEntry::cancelButtonClicked(bool)
{
//  pLabToolsFinderSlot* slot = dynamic_cast <pLabToolsFinderSlot*> (item);
//  slot->doubleClicke   d(column);
};

void pLabPlasmidEntry::saveButtonClicked(bool)
{
//  pLabToolsFinderSlot* slot = dynamic_cast <pLabToolsFinderSlot*> (item);
//  slot->doubleClicked(column);
};

pLabPlasmidEntry* pLabPlasmidEntry::create(pMolKernelInterface* interface, pMolCmd* cmd)
{
  pLabPlasmidEntry* entry = new pLabPlasmidEntry(interface);
  entry->show();
  return entry;
};
